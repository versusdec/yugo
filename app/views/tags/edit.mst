<h1>
    <a class="back mdi mdi-arrow-left-circle-outline" href="/tags/"></a>{{title}}
</h1>

<div class="block">
    <header>
        <h2>{{title}}</h2>
    </header>

    <label>Название</label>
    <input type="text" name="name" value="{{item.name}}">

    <footer>
        {{#unless id 'new'}}
            <button data-type="update">сохранить</button>
        {{/unless}}
        {{#if id 'new'}}
            <button data-type="create">создать</button>
        {{/if}}
    </footer>
</div>