<div class="timeplugin " id="{{id}}">
    <div>
        <label>Часы</label>
        <input type="number" class="timepicker-hours" min="0" max="23" step="1">
    </div>
    <div>
        <label>Минуты</label>
        <input type="number" class="timepicker-minutes" min="0" max="59" step="1">
    </div>
    <div>
        <label>Секунды</label>
        <input type="number" class="timepicker-seconds" min="0" max="59" step="1">
    </div>
</div>